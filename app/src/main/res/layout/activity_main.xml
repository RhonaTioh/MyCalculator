<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

    <TextView
            android:id="@+id/tvDisplay"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textColor="@android:color/white"
            android:hint="0"
            android:gravity="right"
            android:textSize="50dp"/>

    <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:textSize="60dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            <TextView
                    android:id="@+id/tvAC"
                    style="@style/NumberButtonStyle"
                    android:text="AC"
                    android:layout_width="207dp"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tvDivide"
                    style="@style/NumberButtonStyle"
                    android:text="/"
                    android:background="@color/operatorButton"
                    android:textColor="@android:color/white"/>
        </LinearLayout>



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            <TextView
                    android:id="@+id/tv7"
                    style="@style/NumberButtonStyle"
                    android:text="7"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tv8"
                    style="@style/NumberButtonStyle"
                    android:text="8"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tv9"
                    style="@style/NumberButtonStyle"
                    android:text="9"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tvMultiply"
                    style="@style/OperatorButtonStyle"
                    android:text="*"
                    android:textColor="@android:color/white"/>


        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            <TextView
                    android:id="@+id/tv4"
                    style="@style/NumberButtonStyle"
                    android:text="4"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tv5"
                    style="@style/NumberButtonStyle"
                    android:text="5"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tv6"
                    style="@style/NumberButtonStyle"
                    android:text="6"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tvSubtract"
                    style="@style/OperatorButtonStyle"
                    android:text="-"
                    android:textColor="@android:color/white"/>


        </LinearLayout>



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            <TextView
                    android:id="@+id/tv1"
                    style="@style/NumberButtonStyle"
                    android:text="1"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tv2"
                    style="@style/NumberButtonStyle"
                    android:text="2"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tv3"
                    style="@style/NumberButtonStyle"
                    android:text="3"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tvAdd"
                    style="@style/OperatorButtonStyle"
                    android:text="+"
                    android:textColor="@android:color/white"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            <TextView
                    android:id="@+id/tv0"
                    style="@style/NumberButtonStyle"
                    android:layout_width="103dp"
                    android:text="0"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tvDot"
                    style="@style/NumberButtonStyle"
                    android:text="."
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tvEquals"
                    style="@style/OperatorButtonStyle"
                    android:text="="
                    android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>